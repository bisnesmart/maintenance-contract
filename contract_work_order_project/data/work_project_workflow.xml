<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Activity -->
        <record id="act_checklist" model="workflow.activity">
            <field name="wkf_id" ref="contract_work_order.wkf_work_order"/>
            <field name="name">checklist</field>
            <field name="kind">function</field>
            <field name="action">project_create()</field>
        </record>

        <!-- Transistion -->

        <record id="trans_draft_checklist" model="workflow.transition">
            <field name="act_from" ref="contract_work_order.act_draft"/>
            <field name="act_to" ref="act_checklist"/>
            <field name="signal">work_done</field>
        </record>

        <record id="trans_checklist_planned" model="workflow.transition">
            <field name="act_from" ref="act_checklist"/>
            <field name="act_to" ref="contract_work_order.act_planned"/>
            <field name="condition">True</field>
        </record>

    </data>
</openerp>
